<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/base_titlebar"
        layout="@layout/base_titlebar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/base_titlebar" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/px_to_dip_120"
                android:layout_marginRight="@dimen/px_to_dip_120"
                android:layout_marginTop="@dimen/px_to_dip_10"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/main_custom_userid_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_to_dip_40"
                    android:background="@drawable/edit_bg"
                    android:drawablePadding="@dimen/px_to_dip_20"
                    android:hint="@string/target_custom_user_id"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/px_to_dip_10"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/main_content_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_to_dip_40"
                    android:background="@drawable/edit_bg"
                    android:drawablePadding="@dimen/px_to_dip_20"
                    android:hint="@string/msg_content"
                    android:inputType="textCapWords"
                    android:padding="@dimen/px_to_dip_10"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="20sp" >
                </EditText>

                <EditText
                    android:id="@+id/main_custommessage_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_to_dip_40"
                    android:background="@drawable/edit_bg"
                    android:drawablePadding="@dimen/px_to_dip_20"
                    android:hint="@string/custom_content"
                    android:inputType="textCapWords"
                    android:padding="@dimen/px_to_dip_10"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="20sp" >
                </EditText>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/px_to_dip_30"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/main_send_btn"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button"
                        android:paddingLeft="@dimen/px_to_dip_50"
                        android:paddingRight="@dimen/px_to_dip_50"
                        android:text="@string/send"
                        android:textColor="@color/white"
                        android:textSize="@dimen/px_to_dip_34" >
                    </Button>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/main_appkey_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_to_dip_10"
                    android:text="@string/appkey"
                    android:textColor="@android:color/darker_gray" />

                <Button
                    android:id="@+id/main_around_btn"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/button"
                    android:paddingLeft="@dimen/px_to_dip_50"
                    android:paddingRight="@dimen/px_to_dip_50"
                    android:text="@string/surround"
                    android:textColor="@color/white"
                    android:textSize="@dimen/px_to_dip_34" >
                </Button>

                <Button
                    android:id="@+id/main_mygroups_btn"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/button"
                    android:paddingLeft="@dimen/px_to_dip_50"
                    android:paddingRight="@dimen/px_to_dip_50"
                    android:text="@string/my_groups"
                    android:textColor="@color/white"
                    android:textSize="@dimen/px_to_dip_34" >
                </Button>

                <Button
                    android:id="@+id/main_chatctrldemo_btn"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/button"
                    android:paddingLeft="@dimen/px_to_dip_50"
                    android:paddingRight="@dimen/px_to_dip_50"
                    android:text="@string/chat_ctrl_demo"
                    android:textColor="@color/white"
                    android:textSize="@dimen/px_to_dip_34" >
                </Button>

                <Button
                    android:id="@+id/main_customerservice_btn"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/button"
                    android:paddingLeft="@dimen/px_to_dip_50"
                    android:paddingRight="@dimen/px_to_dip_50"
                    android:text="@string/customerservice_demo"
                    android:textColor="@color/white"
                    android:textSize="@dimen/px_to_dip_34" >
                </Button>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/main_count_down_bg_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#80000000"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/main_count_down_textview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#00000000"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="60sp"
        android:visibility="invisible" />

</RelativeLayout>