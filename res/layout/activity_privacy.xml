<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="2" >
    <RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
        android:background="#FFFFFF"  >
      <ImageView
        android:id="@+id/privacyimageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@drawable/back" />
  <TextView
        android:id="@+id/privacytextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_alignBottom="@+id/privacyimageView1"
        android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:text="隐私" />

  </RelativeLayout>

  <ScrollView
         android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    >
  <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
         >   
       <View
             android:id="@+id/privacySplit01"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="8dip"
        android:background="#cccccc" />
          <RelativeLayout
        android:id="@+id/privacyrelative1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/privacySplit01"
          android:background="#FFFFFF"
        android:orientation="horizontal" >

  <TextView
     android:id="@+id/privacyTextView01"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
      android:layout_marginLeft="10dp"
          android:layout_marginTop="10dp"
     android:text="加我为朋友时需要验证" 
     android:textSize="15dp"/>  
     

      <com.wenyu.kjw.adapter.SwitchButton
         android:id="@+id/privacyImageView01"
         android:layout_width="50dp"
         android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
     />
   </RelativeLayout>
          <View
             android:id="@+id/privacySplit02"
        android:layout_width="match_parent"
        android:layout_height="1dp"
           android:layout_below="@id/privacySplit01"
        android:layout_marginTop="35dip"
        android:background="#cccccc" />
               <RelativeLayout
        android:id="@+id/privacyrelative2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/privacySplit02"
        android:layout_marginTop="10dp"
          android:background="#FFFFFF"
        android:orientation="horizontal" >      
     <TextView
     android:id="@+id/privacyTextView02"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
     android:text="黑名单" 
     android:textSize="15dp"/>  
     
  
   </RelativeLayout>
          <View
             android:id="@+id/privacySplit03"
        android:layout_width="match_parent"
        android:layout_height="1dp"
           android:layout_below="@id/privacySplit02"
        android:layout_marginTop="35dip"
        android:background="#cccccc" />
                    
               
          </RelativeLayout>
       </ScrollView>        
</LinearLayout>

