<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/myinfor3relative1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/myinfor3_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/myinfor3_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dip"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:textSize="24dip" />

        <TextView
            android:id="@+id/myinfor3_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:layout_centerVertical="true"
            android:text="保存"
            android:textColor="#FF0015"
            android:textSize="15dip" />

        
    </RelativeLayout>
<View
    android:id="@+id/line1"
    android:layout_below="@+id/myinfor3relative1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc" />
    <RelativeLayout
        android:id="@+id/myinfor3relative2"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/line1"
        android:background="#FFFFFF"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >

        <EditText
            android:id="@+id/perinfo3TextView01"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:background="@null"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/perinfo3ImageView01"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/searchdel" />
    </RelativeLayout>
     <View
         android:id="@+id/line3"
         android:layout_below="@+id/myinfor3relative2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc" />
     
     <ListView 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:id="@+id/mycomlist"  
       android:layout_below="@+id/line3" 
         ></ListView>

</RelativeLayout>