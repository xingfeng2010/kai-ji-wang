        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <View
                android:id="@+id/mSplit01"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc" />

            <TextView
                android:id="@+id/mtextView4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mSplit01"
                android:layout_toRightOf="@id/mimageView3"
                android:gravity="center|left"
                android:padding="20dp"
                android:paddingLeft="15dp"
                android:text="发布管理" />

            <ImageView
                android:id="@+id/mimageView3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dip"
                android:src="@drawable/bianji" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <View
                android:id="@+id/mSplit01"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc" />

            <TextView
                android:id="@+id/mtextView5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mSplit01"
                android:layout_toRightOf="@id/mimageView3"
                android:gravity="center|left"
                android:padding="20dp"
                android:paddingLeft="15dp"
                android:text="联系客服" />

            <ImageView
                android:id="@+id/mimageView3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dip"
                android:src="@drawable/kefu" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <View
                android:id="@+id/mSplit01"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc" />

            <TextView
                android:id="@+id/mtextView6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mSplit01"
                android:layout_toRightOf="@id/mimageView3"
                android:gravity="center|left"
                android:padding="20dp"
                android:paddingLeft="15dp"
                android:text="设置" />

            <ImageView
                android:id="@+id/mimageView3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dip"
                android:src="@drawable/setting" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal" >

            <View
                android:id="@+id/mSplit05"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc" />

            <Button
                android:id="@+id/mbutton1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mSplit06"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@android:color/holo_red_dark"
                android:text="退出当前账号"
                android:textColor="#FFFFFF" />
        </RelativeLayout>
