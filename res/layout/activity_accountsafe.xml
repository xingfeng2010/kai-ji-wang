<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="2" >
    <RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
        android:background="#FFFFFF"  >
      <ImageView
        android:id="@+id/accountsafeimageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@drawable/back" />
  <TextView
        android:id="@+id/accountsafetextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_alignBottom="@+id/accountsafeimageView1"
        android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:text="账号与安全" />

  </RelativeLayout>

  <ScrollView
         android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    >
  <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
         >   
       <View
             android:id="@+id/accountsafeSplit01"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dip"
        android:background="#cccccc" />
           <RelativeLayout
        android:id="@+id/accountsaferelative1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/accountsafeSplit01"
     
        android:background="#cccccc"
        android:orientation="horizontal" >

  <TextView
     android:id="@+id/accountsafeTextView01"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
      android:layout_marginLeft="10dp"
     android:text="账号" 
     android:textColor="#999999"
     android:textSize="15dp"/>  
     

   </RelativeLayout>
          <View
             android:id="@+id/accountsafeSplit02"
        android:layout_width="match_parent"
        android:layout_height="7dp"
           android:layout_below="@id/accountsafeSplit01"
        android:layout_marginTop="28dip"
        android:background="#cccccc" />
               <RelativeLayout
        android:id="@+id/accountsaferelative2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accountsafeSplit02"
        android:background="#FFFFFF"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >      
     <TextView
     android:id="@+id/accountsafeTextView02"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
     android:text="手机号" 
     android:textSize="15dp"/>  
     
   <TextView
         android:id="@+id/accountImageView02"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
           android:textSize="15dp"
          android:textColor="@android:color/darker_gray"
         android:text="15301103658"/>
   </RelativeLayout>
          <View
             android:id="@+id/accountsafeSplit03"
        android:layout_width="match_parent"
        android:layout_height="1dp"
           android:layout_below="@id/accountsafeSplit02"
        android:layout_marginTop="35dip"
        android:background="#cccccc" />
                        <RelativeLayout
        android:id="@+id/accountsaferelative3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accountsafeSplit03"
        android:layout_marginTop="10dp"
          android:background="#FFFFFF"
        android:orientation="horizontal" >       
              <TextView
     android:id="@+id/accountsafeTextView03"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
     android:text="邮箱" 
     android:textSize="15dp"/>  
     
   <TextView
         android:id="@+id/accountImageView03"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
           android:textSize="15dp"
          android:textColor="@android:color/darker_gray"
         android:text="未验证"/>
   </RelativeLayout>
          <View
             android:id="@+id/accountsafeSplit04"
        android:layout_width="match_parent"
        android:layout_height="1dp"
           android:layout_below="@id/accountsafeSplit03"
        android:layout_marginTop="35dip"
        android:background="#cccccc" />
                            <RelativeLayout
        android:id="@+id/accountsaferelative4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accountsafeSplit04"
        android:background="#cccccc"
              android:orientation="horizontal" >        
          
                  <TextView
     android:id="@+id/accountsafeTextView04"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
     android:text="安全" 
     android:textColor="#999999"
     android:textSize="15dp"/>  
     
 
  </RelativeLayout> 
          <View
             android:id="@+id/accountsafeSplit05"
        android:layout_width="match_parent"
        android:layout_height="7dp"
           android:layout_below="@id/accountsafeSplit04"
        android:layout_marginTop="28dip"
        android:background="#cccccc" />  
                                   <RelativeLayout
        android:id="@+id/accountsaferelative5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accountsafeSplit05"
        android:layout_marginTop="10dp"
          android:background="#FFFFFF"
        android:orientation="horizontal" >       
                    <TextView
     android:id="@+id/accountsafeTextView05"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
     android:text="开机网密码" 
     android:textSize="15dp"/>  
     
  </RelativeLayout> 
          <View
             android:id="@+id/accountsafeSplit06"
        android:layout_width="match_parent"
        android:layout_height="1dp"
           android:layout_below="@id/accountsafeSplit05"
        android:layout_marginTop="35dip"
        android:background="#cccccc" />  
                                      <RelativeLayout
        android:id="@+id/accountsaferelative6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accountsafeSplit06"
          android:background="#FFFFFF"
        android:orientation="horizontal" >    
                          <TextView
     android:id="@+id/accountsafeTextView06"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop ="10dp"
     android:text="账号保护" 
     android:textSize="15dp"/>  

             <com.wenyu.kjw.adapter.SwitchButton
         android:id="@+id/accountsafeImageView06"
         android:layout_width="50dp"
         android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"/>
                              <TextView
     android:layout_below="@id/accountsafeTextView06"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop ="10dp"
      android:textColor="@android:color/darker_gray"
     android:text="开启账号保护后,在其他移动设备上登录开机网时需要验证你的手机号码" 
     android:textSize="12dp"/>         
          </RelativeLayout>
              <View
             android:id="@+id/accountsafeSplit07"
        android:layout_width="match_parent"
        android:layout_height="1dp"
           android:layout_below="@id/accountsafeSplit06"
        android:layout_marginTop="75dip"
        android:background="#cccccc" />   
                                
               
          </RelativeLayout>
       </ScrollView>        
</LinearLayout>

