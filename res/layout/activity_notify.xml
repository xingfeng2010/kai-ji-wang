<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="2" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/notifyimageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/notifytextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/notifyimageView1"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:text="新消息通知"
            android:textSize="20sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF" >

            <View
                android:id="@+id/notifySplit01"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginTop="8dip"
                android:background="#cccccc" />

            <RelativeLayout
                android:id="@+id/notifyrelative1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/notifySplit01"
                android:background="#FFFFFF"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/notifyTextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="接收新消息通知"
                    android:textSize="15dp" />

                <com.wenyu.kjw.adapter.SwitchButton
                    android:id="@+id/notifyImageView01"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp" />
            </RelativeLayout>

            <View
                android:id="@+id/notifySplit02"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_below="@id/notifySplit01"
                android:layout_marginTop="35dip"
                android:background="#cccccc" />

            <RelativeLayout
                android:id="@+id/notifyrelative2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/notifySplit02"
                android:background="#FFFFFF"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/notifyTextView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="声音"
                    android:textSize="15dp" />

                <com.wenyu.kjw.adapter.SwitchButton
                    android:id="@+id/notifyImageView02"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp" />
            </RelativeLayout>

            <View
                android:id="@+id/notifySplit03"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/notifySplit02"
                android:layout_marginTop="35dip"
                android:background="#cccccc" />

            <RelativeLayout
                android:id="@+id/notifyrelative3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/notifySplit03"
                android:background="#FFFFFF"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/notifyTextView03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="震动"
                    android:textSize="15dp" />

                <com.wenyu.kjw.adapter.SwitchButton
                    android:id="@+id/notifyImageView03"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp" />
            </RelativeLayout>

            <View
                android:id="@+id/notifySplit04"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_below="@id/notifySplit03"
                android:layout_marginTop="35dip"
                android:background="#cccccc" />

            <RelativeLayout
                android:id="@+id/notifyrelative4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/notifySplit04"
                android:background="#FFFFFF"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/notifyTextView04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="夜间免打扰模式"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/notifyTextView04"
                    android:layout_margin="10dp"
                    android:text="开启后，在设定的时间段内收到新消息时不会响铃或振动"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="15dp" />

                <com.wenyu.kjw.adapter.SwitchButton
                    android:id="@+id/notifyImageView04"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp" />
            </RelativeLayout>

            <View
                android:id="@+id/notifySplit05"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/notifySplit04"
                android:layout_marginTop="90dip"
                android:background="#cccccc" />

            <RelativeLayout
                android:id="@+id/notifyrelative5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/notifySplit05"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/notifyTextView05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="开始时间"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/notifyImageView05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:text="晚上10：00"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="15dp" />
            </RelativeLayout>

            <View
                android:id="@+id/notifySplit06"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/notifySplit05"
                android:layout_marginTop="45dip"
                android:background="#cccccc" />

            <TextView
                android:id="@+id/notifyTextView06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/notifySplit06"
                android:layout_margin="10dp"
                android:text="结束时间"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/notifyImageView06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/notifySplit06"
                android:layout_margin="10dp"
                android:text="早上06：00"
                android:textColor="@android:color/darker_gray"
                android:textSize="15dp" />

            <View
                android:id="@+id/notifySplit07"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/notifyTextView06"
                android:layout_marginTop="5dip"
                android:background="#cccccc" />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>