<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:weightSum="2" 
      android:background="#FFFFFF">
   <RelativeLayout 
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
       android:orientation="horizontal"
         android:background="#FFFFFF">
    <ImageView
        android:id="@+id/equipImageView1"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:src="@drawable/back" />
    <TextView
     android:id="@+id/equipTextView1"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignTop="@+id/equipImageView1"
     android:layout_centerHorizontal="true"
      android:textSize="20sp"
     android:text="器材详情" />
         <ImageView
         android:id="@+id/equipImageView3"
         android:layout_width="wrap_content"
         android:layout_height="20dp"
         android:layout_marginTop="10dp"
         android:layout_alignParentRight="true"
         android:paddingRight="10dp"
         android:src="@drawable/share1" />
    
   <ImageView
     android:id="@+id/equipImageView2"
     android:layout_width="wrap_content"
     android:layout_height="20dp"
      android:layout_marginTop="10dp"
     android:layout_toLeftOf="@id/equipImageView3"
     android:src="@drawable/share" />
   
    </RelativeLayout>
      

    <ListView
        android:id="@+id/equipImageView4"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        android:src="@android:color/holo_blue_bright" />
  <RelativeLayout 
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal">  
    <ImageView
        android:id="@+id/equipImageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@drawable/location" />
     <TextView
         android:id="@+id/equipTextView2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_margin="15dp"
         android:layout_toRightOf="@id/equipImageView5"
         android:text="北京市朝阳区" />

     <ImageView
         android:id="@+id/equipImageView6"
         android:layout_width="wrap_content"
         android:layout_height="20dp"
         android:layout_alignParentRight="true"
         android:layout_margin="10dp"
         android:layout_alignBottom="@id/equipImageView5"
         android:src="@drawable/shaixuan" />
   </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
         >   
         <View
             android:id="@+id/equipSplit01"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dip"
        android:background="#cccccc" />
          <ImageView
     android:id="@+id/equipImageView7"
     android:layout_width="15dp"
     android:layout_height="25dp"
     android:layout_below="@id/equipSplit01"
     android:paddingLeft="5dp"
     android:paddingTop="10dp"
     android:src="@drawable/ladder" />
        <TextView
     android:id="@+id/equipTextView3"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_toRightOf="@id/equipImageView7"
         android:layout_below="@id/equipSplit01"
    android:layout_margin="10dp"
     android:text="李女士" />


        <View
             android:id="@+id/equipSplit03"
        android:layout_width="1dp"
        android:layout_height="35dp"
         android:layout_centerHorizontal="true"
          android:layout_below="@id/equipSplit01"
        android:background="#cccccc" />
  <ImageView
     android:id="@+id/equipImageView01"
     android:layout_width="20dp"
     android:layout_height="15dp"
    android:layout_below="@id/equipSplit01"
        android:layout_margin="10dp"
      android:layout_toRightOf="@id/equipSplit03"
     android:background="@drawable/sendmessage" />
  <TextView
     android:id="@+id/textView4"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content" 
     android:layout_toRightOf="@id/equipImageView01"
      android:layout_below="@id/equipSplit01"
         android:layout_margin="10dp"
        android:layout_marginLeft="10dp" 
     android:text="发送消息" />
         <View
             android:id="@+id/equipSplit02"
        android:layout_width="match_parent"
        android:layout_height="1dp"
           android:layout_below="@id/equipImageView7"
        android:layout_marginTop="10dip"
        android:background="#cccccc" />
     


 <ImageView
     android:id="@+id/equipImageView02"
     android:layout_width="15dp"
     android:layout_height="15dp"
     android:layout_alignLeft="@id/equipImageView7"
     android:layout_margin="5dp"
  android:layout_below="@id/equipSplit02"
     android:background="@drawable/similar" />
  <TextView
     android:id="@+id/equipTextView5"
  android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_toRightOf="@id/equipImageView02"
         android:layout_below="@id/equipSplit02"
    android:layout_marginTop="10dp"
     android:text="找相似" />  
     
   <ImageView
         android:id="@+id/equipImageView003"
         android:layout_width="wrap_content"
         android:layout_height="15dp"
        android:layout_alignParentRight="true"
       android:layout_below="@id/equipSplit02"
         android:layout_margin="10dp"
         android:src="@drawable/shaixuan" />
          <View
             android:id="@+id/equipSplit04"
        android:layout_width="match_parent"
        android:layout_height="1dp"
           android:layout_below="@id/equipImageView003"
        android:layout_marginTop="5dip"
        android:background="#cccccc" />
          <ImageView
     android:id="@+id/equipImageView03"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignLeft="@id/equipImageView7"
  android:layout_below="@id/equipSplit04"
     android:src="@android:drawable/ic_menu_add" />
  <TextView
     android:id="@+id/equipTextView6"
  android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_toRightOf="@id/equipImageView03"
         android:layout_below="@id/equipSplit04"
    android:layout_margin="10dp"
     android:text="器材搭配" />  
     
   <ImageView
         android:id="@+id/equipImageView004"
         android:layout_width="wrap_content"
         android:layout_height="15dp"
        android:layout_alignParentRight="true"
       android:layout_below="@id/equipSplit04"
         android:layout_margin="10dp"
         android:src="@drawable/shaixuan" />
          <View
             android:id="@+id/equipSplit05"
        android:layout_width="match_parent"
        android:layout_height="1dp"
           android:layout_below="@id/equipImageView004"
        android:layout_marginTop="5dip"
        android:background="#cccccc" />
  </RelativeLayout>
   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        android:background="?android:attr/listDivider" 
         >

    </LinearLayout>    
    
</LinearLayout>

    
